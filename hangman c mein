#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>
#include <time.h>
/*List declaration for pointer words */
#define Len 4
char *list[]={"ambition","bat","ball","cricket"};
/* This function will generate random word from list */

char* generate(int n,char list[]);
char* generate(int n,char list[])
{
    int num;
    char *pim;
    num=rand()%n;
    pim=&list[num];
    return pim;
}
bool play_game(void);

int main(void)
{
    int x;
    play_game();
    printf("You earned: %d",x);
    return 0;
}

bool play_game(void)
{
    char* target;
    target=generate(Len,list[4]);
    int len=strlen(target);
    char gin[len+1];
    char *guess;
    guess=gin;
    /* Fix set up for the game by assuming fixed area for guess func */
    for(int i=0;i<len;i++)
    {
        printf("- ");
        guess[i]='-';
    }
    printf("\n");
    int turns=5,points=len,f;
    char input;
    while(turns>0)
    {
        f=0;
        printf("Enter your guess: ");
        scanf("%c",&input);
        for(int j=0;j<len;j++)
        {
            if(target[j]==input)
            {
                guess[j]=input;
                printf("%c",input);
                f=1;
            }
            else printf("- ");
        }
        if(strcmp(guess,target)==0) 
        {
            printf("You won this game!!!");
            return true;
        }
        if(f==0) turns=turns-1;
    }
    if(strcmp(guess,target)==0)
    {
        printf("You won this game!!!");
        return true;
    }
    else
    {
        printf("You lost this game!!!");
        return false;
    }
}
